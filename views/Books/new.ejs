<h2>Create new Book</h2>

<form action="/books/new" method="POST" enctype="multipart/form-data">
  <label for="title">Title</label>
  <input name="title" type="text" value="<%= book.title %>" /><br />
  <label for="publishDate">Publish date</label>
  <input
    name="publishDate"
    type="date"
    value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0]  %>"
  /><br />
  <label for="cover">Cover image</label>
  <input name="cover" type="file" /><br />
  <label for="pageCount">Page count</label>
  <input
    name="pageCount"
    type="number"
    min="1"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
    value="<%= book.pageCount %>"
  /><br />
  <label for="author">Author</label>
  <select name="author">
    <!-- <option label="Select Author" value=""></option> -->
    <% authors.forEach(author => { %> 
      <% if (author.id === book.author) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>">
      <% } else {%>
        <option label="<%= author.name %>" value="<%= author.id %>">
      <% } %> 
    <% }) %>
  </select>

  <br />
  <label for="description">Description</label>
  <textarea name="description" type="text" rows="5">
<%= book.description %></textarea
  >
  <br />
  <br />
  <a href="/books">Cancel</a>
  <button type="submit">Create</button>
</form>
